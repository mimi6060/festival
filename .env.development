# =============================================================================
# FESTIVAL PLATFORM - DEVELOPMENT ENVIRONMENT
# =============================================================================
# This file contains development-specific configuration.
# All services run locally via Docker Compose.
# =============================================================================

# Application
NODE_ENV=development
APP_NAME="Festival Platform (Dev)"
APP_URL=http://localhost:3000
API_URL=http://localhost:3333
ADMIN_URL=http://localhost:4200
PORT=3333
API_PREFIX=api
API_VERSION=v1
DEBUG=true

# Database - PostgreSQL (Docker)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=festival_db
DATABASE_USER=festival_user
DATABASE_PASSWORD=festival_dev_password
DATABASE_URL=postgresql://festival_user:festival_dev_password@localhost:5432/festival_db?schema=public
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL_ENABLED=false

# Redis (Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# JWT Authentication (Development secrets - NOT FOR PRODUCTION!)
JWT_SECRET=dev_jwt_secret_for_local_development_only_32chars
JWT_ACCESS_SECRET=dev_jwt_access_secret_for_local_development_32chars
JWT_ACCESS_EXPIRES_IN=900
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=dev_jwt_refresh_secret_for_local_development_only
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=festival-api-dev
JWT_AUDIENCE=festival-app-dev
BCRYPT_SALT_ROUNDS=10

# QR Code Secret (for ticket validation)
QR_CODE_SECRET=dev_qr_code_secret_for_local_development_32chars

# Stripe (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret
STRIPE_CURRENCY=eur

# Email - MailHog (Docker - captures all emails locally)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME="Festival Platform (Dev)"
SMTP_FROM_EMAIL=dev@festival-platform.com

# File Storage - Local
STORAGE_TYPE=local
UPLOAD_LOCAL_PATH=./uploads
UPLOAD_BASE_URL=/uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_MAX_IMAGE_SIZE=5242880

# MinIO (S3-compatible, Docker)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_S3_BUCKET=festival-uploads
AWS_S3_ENDPOINT=http://localhost:9000
AWS_S3_PUBLIC_URL=http://localhost:9000/festival-uploads

# Push Notifications (Disabled in dev)
FIREBASE_ENABLED=false
APNS_ENABLED=false

# Sentry (Disabled in dev)
SENTRY_ENABLED=false
SENTRY_DSN=

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200,http://localhost:4201,http://localhost:19006,http://localhost:8081
RATE_LIMIT_ENABLED=false
CSRF_ENABLED=false
QR_SECRET=dev_qr_secret_for_local_development_only_32ch
ENCRYPTION_KEY=dev_encryption_key_32_bytes_here

# Logging (Verbose for development)
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_DIR=./logs
LOG_REQUESTS=true
LOG_RESPONSES=true
LOG_BODY=true

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics

# Feature Flags (All enabled for testing)
FEATURE_REGISTRATION_ENABLED=true
FEATURE_PAYMENT_ENABLED=true
FEATURE_CASHLESS_ENABLED=true
FEATURE_PUSH_NOTIFICATIONS_ENABLED=false
FEATURE_SMS_NOTIFICATIONS_ENABLED=false
FEATURE_OAUTH_ENABLED=false
FEATURE_API_DOCS_ENABLED=true
FEATURE_GRAPHQL_ENABLED=false

# Queue
QUEUE_ENABLED=false

# Admin account (Development only!)
ADMIN_EMAIL=admin@festival-platform.com
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=Dev

# Swagger Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api/docs

# Testing
TEST_DATABASE_URL=postgresql://festival_user:festival_dev_password@localhost:5432/festival_test
TEST_REDIS_URL=redis://localhost:6379/1
