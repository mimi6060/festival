{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "outDir": "./dist/test",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "noEmit": false,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/types": ["./types/index.ts"],
      "@/types/*": ["./types/*"]
    }
  },
  "include": [
    "jest.setup.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__mocks__/**/*.ts",
    "__mocks__/**/*.js",
    "components/**/*.tsx",
    "lib/**/*.tsx",
    "lib/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
