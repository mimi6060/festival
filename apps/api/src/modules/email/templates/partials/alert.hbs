<!-- Alert Box -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 20px 0;">
  <tr>
    <td style="padding: 16px 20px; background-color: {{#if type_success}}#d4edda{{else if type_warning}}#fff3cd{{else if type_error}}#f8d7da{{else}}#cce5ff{{/if}}; border-radius: 6px; border: 1px solid {{#if type_success}}#c3e6cb{{else if type_warning}}#ffeeba{{else if type_error}}#f5c6cb{{else}}#b8daff{{/if}};">
      <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          {{#if icon}}
          <td style="width: 30px; vertical-align: top;">
            <span style="font-size: 18px;">{{icon}}</span>
          </td>
          {{/if}}
          <td>
            {{#if title}}
            <p style="margin: 0 0 5px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 14px; font-weight: 600; color: {{#if type_success}}#155724{{else if type_warning}}#856404{{else if type_error}}#721c24{{else}}#004085{{/if}};">
              {{title}}
            </p>
            {{/if}}
            <p style="margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 14px; color: {{#if type_success}}#155724{{else if type_warning}}#856404{{else if type_error}}#721c24{{else}}#004085{{/if}}; line-height: 22px;">
              {{{message}}}
            </p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
