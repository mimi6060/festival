<!-- CTA Button -->
<table border="0" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <td align="{{align}}" style="padding: {{#if paddingTop}}{{paddingTop}}{{else}}25{{/if}}px 0 {{#if paddingBottom}}{{paddingBottom}}{{else}}25{{/if}}px 0;">
      <table border="0" cellpadding="0" cellspacing="0">
        <tr>
          <td align="center" style="border-radius: 6px; background-color: {{#if buttonColor}}{{buttonColor}}{{else}}{{primaryColor}}{{/if}};">
            <a href="{{url}}" target="_blank" style="display: inline-block; padding: 16px 36px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 600; color: {{#if textColor}}{{textColor}}{{else}}#ffffff{{/if}}; text-decoration: none; border-radius: 6px;">
              {{text}}
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<!-- Fallback link -->
{{#if showFallback}}
<table border="0" cellpadding="0" cellspacing="0" width="100%">
  <tr>
    <td align="center" style="padding-bottom: 20px;">
      <p style="margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 12px; color: #8c8c8c; line-height: 20px;">
        {{#if lang_fr}}
          Si le bouton ne fonctionne pas, copiez ce lien dans votre navigateur :
        {{else}}
          If the button doesn't work, copy this link into your browser:
        {{/if}}
        <br>
        <a href="{{url}}" style="color: {{primaryColor}}; word-break: break-all;">{{url}}</a>
      </p>
    </td>
  </tr>
</table>
{{/if}}
