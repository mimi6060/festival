<!-- Email Header -->
<tr>
  <td style="padding: 30px 40px; background: linear-gradient(135deg, {{primaryColor}} 0%, {{secondaryColor}} 100%); border-radius: 8px 8px 0 0;" class="mobile-padding">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <tr>
        <td align="center">
          {{#if festivalLogo}}
          <a href="{{festivalUrl}}" target="_blank" style="text-decoration: none;">
            <img src="{{festivalLogo}}" alt="{{festivalName}}" width="180" height="60" style="display: block; max-width: 180px; height: auto;" />
          </a>
          {{else}}
          <a href="{{festivalUrl}}" target="_blank" style="text-decoration: none;">
            <h1 style="margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 28px; font-weight: 700; color: #ffffff; letter-spacing: -0.5px;">
              {{festivalName}}
            </h1>
          </a>
          {{/if}}
        </td>
      </tr>
      {{#if festivalTagline}}
      <tr>
        <td align="center" style="padding-top: 8px;">
          <p style="margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 14px; color: rgba(255,255,255,0.85);">
            {{festivalTagline}}
          </p>
        </td>
      </tr>
      {{/if}}
    </table>
  </td>
</tr>
