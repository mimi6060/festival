# ===========================================
# FestivalHub Web Application Configuration
# ===========================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_API_VERSION=v1

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXTAUTH_URL=http://localhost:4201
NEXTAUTH_SECRET=your-nextauth-secret-here

# Payment Gateway (Stripe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
NEXT_PUBLIC_FEATURE_SOCIAL_LOGIN=true
NEXT_PUBLIC_FEATURE_NEWSLETTER=true
NEXT_PUBLIC_FEATURE_LIVE_CHAT=false

# Image CDN
NEXT_PUBLIC_IMAGE_CDN_URL=https://images.festivalhub.com

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,fr
