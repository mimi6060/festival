# Database
DATABASE_URL=postgresql://user:password@localhost:5432/festival

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-secret-key-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=festival-api
JWT_AUDIENCE=festival-app

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Logging
LOG_LEVEL=info
LOG_DIR=logs
LOG_TO_FILE=false

# Sentry Error Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=festival-api@1.0.0
SENTRY_ENABLED=false
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Upload Storage
STORAGE_TYPE=local
UPLOAD_MAX_SIZE=10485760
UPLOAD_MAX_IMAGE_SIZE=5242880
UPLOAD_LOCAL_PATH=./uploads
UPLOAD_BASE_URL=/uploads

# AWS S3 (for production)
AWS_BUCKET=festival-uploads
AWS_REGION=eu-west-1
AWS_ACCESS_KEY=your-access-key
AWS_SECRET_KEY=your-secret-key
AWS_ENDPOINT=
AWS_SIGNED_URL_EXPIRY=3600
