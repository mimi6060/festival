# ============================================
# Festival Admin - Development Dockerfile
# ============================================
# Optimized for development with hot-reload

FROM node:20-alpine AS development

# Install required system dependencies
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files from monorepo root
COPY ../../package.json ../../package-lock.json ./
COPY ./festival/apps/admin/package.json ./apps/admin/
COPY libs/shared/types/package.json ./libs/shared/types/
COPY libs/shared/utils/package.json ./libs/shared/utils/

# Diagnostic : afficher le contenu du contexte et des fichiers importants
RUN echo 'CONTENU /app :' && ls -l /app && echo 'CONTENU /app/apps/admin :' && ls -l /app/apps/admin && echo 'CONTENU /app/libs/shared/types :' && ls -l /app/libs/shared/types && echo 'CONTENU /app/libs/shared/utils :' && ls -l /app/libs/shared/utils && echo 'LOCKFILE :' && cat /app/package-lock.json
# Install all dependencies
RUN npm ci

# Diagnostic : afficher le contenu du contexte et des fichiers importants
RUN echo 'CONTENU /app :' && ls -l /app && echo 'CONTENU /app/apps/admin :' && ls -l /app/apps/admin && echo 'CONTENU /app/libs/shared/types :' && ls -l /app/libs/shared/types && echo 'CONTENU /app/libs/shared/utils :' && ls -l /app/libs/shared/utils

# Copy configuration files
COPY tsconfig.base.json ./
COPY nx.json ./

# Set development environment
ENV NODE_ENV=development
ENV PORT=3000
ENV NEXT_TELEMETRY_DISABLED=1

# Expose admin port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3000 || exit 1

# Default command for development with hot-reload
CMD ["npm", "run", "dev", "--", "-p", "3000"]
