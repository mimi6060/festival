<!-- Email Footer -->
<tr>
  <td style="padding: 20px 40px 30px 40px; border-top: 1px solid #eaeaea;" class="mobile-padding">
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
      <!-- Social links -->
      {{#if hasSocialLinks}}
      <tr>
        <td align="center" style="padding-bottom: 20px;">
          <table border="0" cellpadding="0" cellspacing="0">
            <tr>
              {{#if facebookUrl}}
              <td style="padding: 0 8px;">
                <a href="{{facebookUrl}}" target="_blank" style="text-decoration: none;">
                  <img src="https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/facebook.svg" alt="Facebook" width="24" height="24" style="display: block; filter: invert(50%);" />
                </a>
              </td>
              {{/if}}
              {{#if instagramUrl}}
              <td style="padding: 0 8px;">
                <a href="{{instagramUrl}}" target="_blank" style="text-decoration: none;">
                  <img src="https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/instagram.svg" alt="Instagram" width="24" height="24" style="display: block; filter: invert(50%);" />
                </a>
              </td>
              {{/if}}
              {{#if twitterUrl}}
              <td style="padding: 0 8px;">
                <a href="{{twitterUrl}}" target="_blank" style="text-decoration: none;">
                  <img src="https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/x.svg" alt="X/Twitter" width="24" height="24" style="display: block; filter: invert(50%);" />
                </a>
              </td>
              {{/if}}
              {{#if youtubeUrl}}
              <td style="padding: 0 8px;">
                <a href="{{youtubeUrl}}" target="_blank" style="text-decoration: none;">
                  <img src="https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/youtube.svg" alt="YouTube" width="24" height="24" style="display: block; filter: invert(50%);" />
                </a>
              </td>
              {{/if}}
              {{#if spotifyUrl}}
              <td style="padding: 0 8px;">
                <a href="{{spotifyUrl}}" target="_blank" style="text-decoration: none;">
                  <img src="https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/spotify.svg" alt="Spotify" width="24" height="24" style="display: block; filter: invert(50%);" />
                </a>
              </td>
              {{/if}}
            </tr>
          </table>
        </td>
      </tr>
      {{/if}}

      <!-- Contact info -->
      <tr>
        <td align="center">
          <p style="margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 13px; color: #666666; line-height: 22px;">
            {{#if lang_fr}}
              Besoin d'aide ?
              <a href="mailto:{{supportEmail}}" style="color: {{primaryColor}}; text-decoration: none;">Contactez-nous</a>
              {{#if supportPhone}}
              ou appelez le <a href="tel:{{supportPhone}}" style="color: {{primaryColor}}; text-decoration: none;">{{supportPhone}}</a>
              {{/if}}
            {{else}}
              Need help?
              <a href="mailto:{{supportEmail}}" style="color: {{primaryColor}}; text-decoration: none;">Contact us</a>
              {{#if supportPhone}}
              or call <a href="tel:{{supportPhone}}" style="color: {{primaryColor}}; text-decoration: none;">{{supportPhone}}</a>
              {{/if}}
            {{/if}}
          </p>
        </td>
      </tr>

      <!-- App download links -->
      {{#if hasAppLinks}}
      <tr>
        <td align="center" style="padding-top: 20px;">
          <table border="0" cellpadding="0" cellspacing="0">
            <tr>
              {{#if appStoreUrl}}
              <td style="padding: 0 5px;">
                <a href="{{appStoreUrl}}" target="_blank">
                  <img src="https://tools.applemediaservices.com/api/badges/download-on-the-app-store/black/en-us" alt="Download on App Store" height="40" style="display: block; height: 40px; width: auto;" />
                </a>
              </td>
              {{/if}}
              {{#if playStoreUrl}}
              <td style="padding: 0 5px;">
                <a href="{{playStoreUrl}}" target="_blank">
                  <img src="https://play.google.com/intl/en_us/badges/static/images/badges/en_badge_web_generic.png" alt="Get it on Google Play" height="40" style="display: block; height: 40px; width: auto;" />
                </a>
              </td>
              {{/if}}
            </tr>
          </table>
        </td>
      </tr>
      {{/if}}
    </table>
  </td>
</tr>
