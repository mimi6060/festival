<!-- Info Box -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 20px 0;">
  <tr>
    <td style="padding: 20px; background-color: {{#if bgColor}}{{bgColor}}{{else}}#f8f9fa{{/if}}; border-radius: 8px; border-left: 4px solid {{#if borderColor}}{{borderColor}}{{else}}{{primaryColor}}{{/if}};">
      {{#if title}}
      <h3 style="margin: 0 0 10px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 600; color: #1a1a2e;">
        {{#if icon}}
        <span style="margin-right: 8px;">{{icon}}</span>
        {{/if}}
        {{title}}
      </h3>
      {{/if}}
      <div style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 14px; color: #4a4a4a; line-height: 22px;">
        {{{content}}}
      </div>
    </td>
  </tr>
</table>
