<!-- Price Summary Table -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 20px 0; background-color: #f8f9fa; border-radius: 8px;">
  <tr>
    <td style="padding: 20px;">
      <!-- Items -->
      {{#each items}}
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="{{#unless @last}}border-bottom: 1px solid #eaeaea;{{/unless}}">
        <tr>
          <td style="padding: 12px 0;">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
              <tr>
                <td style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 14px; color: #4a4a4a;">
                  {{this.name}}
                  {{#if this.quantity}}
                  <span style="color: #8c8c8c;"> x{{this.quantity}}</span>
                  {{/if}}
                </td>
                <td align="right" style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 14px; color: #1a1a2e; font-weight: 500;">
                  {{this.price}}
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
      {{/each}}

      <!-- Subtotal -->
      {{#if subtotal}}
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="border-top: 1px solid #ddd; margin-top: 10px;">
        <tr>
          <td style="padding: 12px 0 5px 0;">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
              <tr>
                <td style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 13px; color: #8c8c8c;">
                  {{#if lang_fr}}Sous-total{{else}}Subtotal{{/if}}
                </td>
                <td align="right" style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 13px; color: #4a4a4a;">
                  {{subtotal}}
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
      {{/if}}

      <!-- Fees -->
      {{#if fees}}
      <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td style="padding: 5px 0;">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
              <tr>
                <td style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 13px; color: #8c8c8c;">
                  {{#if lang_fr}}Frais de service{{else}}Service fees{{/if}}
                </td>
                <td align="right" style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 13px; color: #4a4a4a;">
                  {{fees}}
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
      {{/if}}

      <!-- Discount -->
      {{#if discount}}
      <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td style="padding: 5px 0;">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
              <tr>
                <td style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 13px; color: #28a745;">
                  {{#if lang_fr}}Reduction{{else}}Discount{{/if}}
                  {{#if discountCode}}({{discountCode}}){{/if}}
                </td>
                <td align="right" style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 13px; color: #28a745;">
                  -{{discount}}
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
      {{/if}}

      <!-- Total -->
      <table border="0" cellpadding="0" cellspacing="0" width="100%" style="border-top: 2px solid {{primaryColor}}; margin-top: 10px;">
        <tr>
          <td style="padding: 15px 0 0 0;">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
              <tr>
                <td style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 16px; color: #1a1a2e; font-weight: 600;">
                  {{#if lang_fr}}Total{{else}}Total{{/if}}
                </td>
                <td align="right" style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 18px; color: {{primaryColor}}; font-weight: 700;">
                  {{total}}
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
