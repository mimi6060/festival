<!-- Two Column Layout -->
<table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: {{#if marginTop}}{{marginTop}}{{else}}15{{/if}}px 0 {{#if marginBottom}}{{marginBottom}}{{else}}15{{/if}}px 0;">
  <tr>
    <td class="mobile-stack" style="width: 50%; padding-right: 10px; vertical-align: top;">
      <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td style="padding: 15px; background-color: #f8f9fa; border-radius: 6px;">
            <p style="margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 12px; color: #8c8c8c; text-transform: uppercase; letter-spacing: 0.5px;">
              {{leftLabel}}
            </p>
            <p style="margin: 5px 0 0 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 16px; color: #1a1a2e; font-weight: 600;">
              {{leftValue}}
            </p>
          </td>
        </tr>
      </table>
    </td>
    <td class="mobile-stack" style="width: 50%; padding-left: 10px; vertical-align: top;">
      <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td style="padding: 15px; background-color: #f8f9fa; border-radius: 6px;">
            <p style="margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 12px; color: #8c8c8c; text-transform: uppercase; letter-spacing: 0.5px;">
              {{rightLabel}}
            </p>
            <p style="margin: 5px 0 0 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 16px; color: #1a1a2e; font-weight: 600;">
              {{rightValue}}
            </p>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
