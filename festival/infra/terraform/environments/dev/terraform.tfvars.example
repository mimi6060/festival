# ============================================================================
# Festival Platform - Development Environment Variables Example
# ============================================================================
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control!
# ============================================================================

# AWS Region
aws_region = "eu-west-1"

# Database
database_username = "festival_admin"

# Container images (update with your registry)
api_image   = "festival/api:dev"
web_image   = "festival/web:dev"
admin_image = "festival/admin:dev"

# Domain (optional for dev)
domain_name = ""

# Stripe test keys
stripe_secret_key     = "sk_test_..."
stripe_webhook_secret = "whsec_..."

# Alerts
alert_email = "dev-alerts@example.com"
