// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  ADMIN
  ORGANIZER
  STAFF
  CASHIER
  SECURITY
  USER
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BANNED
  PENDING_VERIFICATION
}

enum FestivalStatus {
  DRAFT
  PUBLISHED
  ONGOING
  COMPLETED
  CANCELLED
}

enum TicketStatus {
  AVAILABLE
  RESERVED
  SOLD
  USED
  CANCELLED
  REFUNDED
}

enum TicketType {
  STANDARD
  VIP
  BACKSTAGE
  CAMPING
  PARKING
  COMBO
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum PaymentProvider {
  STRIPE
  PAYPAL
  BANK_TRANSFER
  CASH
}

enum TransactionType {
  TOPUP
  PAYMENT
  REFUND
  TRANSFER
  CORRECTION
}

enum VendorType {
  FOOD
  DRINK
  BAR
  MERCHANDISE
}

enum PayoutStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum VendorPaymentMethod {
  CASHLESS
  CARD
  CASH
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  DELIVERED
  CANCELLED
}

enum NotificationType {
  TICKET_PURCHASED
  PAYMENT_SUCCESS
  PAYMENT_FAILED
  CASHLESS_TOPUP
  ARTIST_REMINDER
  FESTIVAL_UPDATE
  SCHEDULE_CHANGE
  SECURITY_ALERT
  PROMO
  VENDOR_ORDER
  SYSTEM
}

enum NotificationPlatform {
  IOS
  ANDROID
  WEB
}

enum NotificationCategory {
  TICKETS
  PAYMENTS
  CASHLESS
  PROGRAM
  SECURITY
  PROMOTIONS
  VENDOR
  SYSTEM
}

enum ScheduledNotificationStatus {
  PENDING
  SENT
  CANCELLED
  FAILED
}

enum AccommodationType {
  TENT
  CARAVAN
  GLAMPING
  CABIN
  CAMPERVAN
}

enum CampingSpotStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
  MAINTENANCE
  BLOCKED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CHECKED_IN
  CHECKED_OUT
  CANCELLED
  NO_SHOW
}

// Models
model User {
  id                String      @id @default(uuid())
  email             String      @unique
  passwordHash      String
  firstName         String
  lastName          String
  phone             String?
  role              UserRole    @default(USER)
  status            UserStatus  @default(PENDING_VERIFICATION)
  emailVerified     Boolean     @default(false)
  refreshToken      String?
  lastLoginAt       DateTime?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  // Relations
  tickets           Ticket[]
  payments          Payment[]
  cashlessAccount   CashlessAccount?
  staffAssignments  StaffAssignment[]
  organizedFestivals Festival[]       // Festivals organized by this user
  vendorOrders      VendorOrder[]
  notifications     Notification[]
  pushTokens        PushToken[]
  notificationPreference NotificationPreference?
  campingBookings   CampingBooking[]
  supportTickets    SupportTicket[]
  staffMembers      StaffMember[]

  // Performance indexes
  @@index([email])
  @@index([role])
  @@index([status])
  @@index([role, status])
  @@index([createdAt])
  @@index([lastLoginAt])
}

model Festival {
  id              String          @id @default(uuid())
  organizerId     String          // Multi-tenant: festival belongs to an organizer
  name            String
  slug            String          @unique
  description     String?
  location        String
  address         String?
  startDate       DateTime
  endDate         DateTime
  status          FestivalStatus  @default(DRAFT)
  maxCapacity     Int
  currentAttendees Int            @default(0)
  logoUrl         String?
  bannerUrl       String?
  websiteUrl      String?
  contactEmail    String?
  timezone        String          @default("Europe/Paris")
  currency        String          @default("EUR")
  isDeleted       Boolean         @default(false)  // Soft delete
  deletedAt       DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  organizer        User            @relation(fields: [organizerId], references: [id])
  ticketCategories TicketCategory[]
  tickets          Ticket[]
  zones            Zone[]
  staffAssignments StaffAssignment[]
  cashlessTransactions CashlessTransaction[]
  vendors          Vendor[]
  stages           Stage[]
  campingZones     CampingZone[]
  mapPois          MapPoi[]
  staffMembers     StaffMember[]

  @@index([organizerId])
  @@index([slug])
  @@index([status])
  @@index([startDate, endDate])
  @@index([isDeleted])
}

model TicketCategory {
  id            String      @id @default(uuid())
  festivalId    String
  name          String
  description   String?
  type          TicketType
  price         Decimal     @db.Decimal(10, 2)
  quota         Int
  soldCount     Int         @default(0)
  maxPerUser    Int         @default(4)
  saleStartDate DateTime
  saleEndDate   DateTime
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  festival      Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  tickets       Ticket[]

  @@index([festivalId])
  @@index([type])
}

model Ticket {
  id              String        @id @default(uuid())
  festivalId      String
  categoryId      String
  userId          String
  qrCode          String        @unique
  qrCodeData      String
  status          TicketStatus  @default(SOLD)
  purchasePrice   Decimal       @db.Decimal(10, 2)
  usedAt          DateTime?
  usedByStaffId   String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  festival        Festival      @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  category        TicketCategory @relation(fields: [categoryId], references: [id])
  user            User          @relation(fields: [userId], references: [id])
  payment         Payment?      @relation(fields: [paymentId], references: [id])
  paymentId       String?
  zoneAccessLogs  ZoneAccessLog[]

  // Performance indexes - optimized for common queries
  @@index([festivalId])
  @@index([userId])
  @@index([qrCode])
  @@index([status])
  @@index([festivalId, status])           // Analytics: tickets by festival and status
  @@index([festivalId, categoryId])       // Reports: tickets by festival and category
  @@index([festivalId, createdAt])        // Time-based queries
  @@index([userId, status])               // User's tickets by status
  @@index([categoryId, status])           // Category sales
  @@index([createdAt])                    // Time-based analytics
  @@index([paymentId])                    // Payment lookup
}

model Payment {
  id              String          @id @default(uuid())
  userId          String
  amount          Decimal         @db.Decimal(10, 2)
  currency        String          @default("EUR")
  status          PaymentStatus   @default(PENDING)
  provider        PaymentProvider
  providerPaymentId String?
  providerData    Json?
  description     String?
  metadata        Json?
  paidAt          DateTime?
  refundedAt      DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  user            User            @relation(fields: [userId], references: [id])
  tickets         Ticket[]
  cashlessTopup   CashlessTransaction?

  // Performance indexes
  @@index([userId])
  @@index([status])
  @@index([providerPaymentId])
  @@index([userId, status])               // User payments by status
  @@index([createdAt])                    // Time-based queries
  @@index([status, createdAt])            // Payment analytics
  @@index([provider, status])             // Provider analysis
  @@index([paidAt])                       // Completed payments timeline
}

model CashlessAccount {
  id            String      @id @default(uuid())
  userId        String      @unique
  balance       Decimal     @db.Decimal(10, 2) @default(0)
  nfcTagId      String?     @unique
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user          User        @relation(fields: [userId], references: [id])
  transactions  CashlessTransaction[]

  @@index([nfcTagId])
}

model CashlessTransaction {
  id              String          @id @default(uuid())
  accountId       String
  festivalId      String
  type            TransactionType
  amount          Decimal         @db.Decimal(10, 2)
  balanceBefore   Decimal         @db.Decimal(10, 2)
  balanceAfter    Decimal         @db.Decimal(10, 2)
  description     String?
  metadata        Json?
  paymentId       String?         @unique
  performedById   String?
  createdAt       DateTime        @default(now())

  // Relations
  account         CashlessAccount @relation(fields: [accountId], references: [id])
  festival        Festival        @relation(fields: [festivalId], references: [id])
  payment         Payment?        @relation(fields: [paymentId], references: [id])

  // Performance indexes - critical for high-volume transactions
  @@index([accountId])
  @@index([festivalId])
  @@index([type])
  @@index([createdAt])
  @@index([festivalId, type])             // Festival cashless analytics
  @@index([festivalId, createdAt])        // Time-based festival reports
  @@index([festivalId, type, createdAt])  // Full analytics queries
  @@index([accountId, createdAt])         // User transaction history
  @@index([performedById])                // Staff activity tracking
}

model Zone {
  id            String      @id @default(uuid())
  festivalId    String
  name          String
  description   String?
  capacity      Int?
  currentOccupancy Int      @default(0)
  requiresTicketType TicketType[]
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  festival      Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  staffAssignments StaffAssignment[]
  accessLogs    ZoneAccessLog[]
  staffShifts   StaffShift[]

  @@index([festivalId])
}

enum ZoneAccessAction {
  ENTRY
  EXIT
}

model ZoneAccessLog {
  id          String           @id @default(uuid())
  zoneId      String
  ticketId    String
  action      ZoneAccessAction
  performedById String?
  timestamp   DateTime         @default(now())

  // Relations
  zone        Zone             @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  ticket      Ticket           @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([zoneId])
  @@index([ticketId])
  @@index([timestamp])
  @@index([zoneId, timestamp])
}

model StaffAssignment {
  id            String      @id @default(uuid())
  userId        String
  festivalId    String
  zoneId        String?
  role          UserRole
  startTime     DateTime
  endTime       DateTime
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user          User        @relation(fields: [userId], references: [id])
  festival      Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  zone          Zone?       @relation(fields: [zoneId], references: [id])

  @@index([userId])
  @@index([festivalId])
  @@index([zoneId])
}

model Artist {
  id            String        @id @default(uuid())
  name          String
  genre         String?
  bio           String?
  imageUrl      String?
  spotifyUrl    String?
  instagramUrl  String?
  websiteUrl    String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  performances    Performance[]
  favoriteArtists FavoriteArtist[]

  @@index([name])
  @@index([genre])
}

model Stage {
  id            String        @id @default(uuid())
  festivalId    String
  name          String
  description   String?
  capacity      Int?
  location      String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  festival      Festival      @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  performances  Performance[]

  @@unique([festivalId, name])
  @@index([festivalId])
}

model Performance {
  id            String        @id @default(uuid())
  artistId      String
  stageId       String
  startTime     DateTime
  endTime       DateTime
  description   String?
  isCancelled   Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  artist        Artist        @relation(fields: [artistId], references: [id], onDelete: Cascade)
  stage         Stage         @relation(fields: [stageId], references: [id], onDelete: Cascade)

  @@index([artistId])
  @@index([stageId])
  @@index([startTime])
  @@index([stageId, startTime])
}

model AuditLog {
  id          String   @id @default(uuid())
  userId      String?
  action      String
  entityType  String
  entityId    String?
  oldValue    Json?
  newValue    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([entityType])
  @@index([entityId])
  @@index([createdAt])
}

// Map POI Types
enum PoiType {
  STAGE
  FOOD
  DRINK
  TOILET
  MEDICAL
  INFO
  ATM
  PARKING
  CAMPING
  ENTRANCE
  EXIT
  CHARGING
  LOCKER
}

model MapPoi {
  id          String    @id @default(uuid())
  festivalId  String
  name        String
  type        PoiType
  description String?
  latitude    Float
  longitude   Float
  iconUrl     String?
  metadata    Json?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  festival    Festival  @relation(fields: [festivalId], references: [id], onDelete: Cascade)

  @@index([festivalId])
  @@index([type])
  @@index([latitude, longitude])
}

model Notification {
  id          String           @id @default(uuid())
  userId      String
  festivalId  String?          // Optional - for festival-specific notifications
  title       String
  body        String
  type        NotificationType
  data        Json?            // Additional payload data
  imageUrl    String?          // Optional image for rich notifications
  actionUrl   String?          // Deep link or action URL
  isRead      Boolean          @default(false)
  readAt      DateTime?        // When the notification was read
  sentAt      DateTime?        // When push was sent (null if in-app only)
  createdAt   DateTime         @default(now())

  // Relations
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([festivalId])
  @@index([userId, isRead])
  @@index([type])
  @@index([createdAt])
}

model PushToken {
  id          String               @id @default(uuid())
  userId      String
  token       String               @unique
  platform    NotificationPlatform
  deviceName  String?              // e.g., "iPhone 15 Pro", "Chrome on Windows"
  isActive    Boolean              @default(true)
  lastUsedAt  DateTime?
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt

  // Relations
  user        User                 @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, token])
  @@index([userId])
  @@index([token])
  @@index([platform])
  @@index([isActive])
}

model NotificationPreference {
  id                String                 @id @default(uuid())
  userId            String                 @unique
  emailEnabled      Boolean                @default(true)
  pushEnabled       Boolean                @default(true)
  smsEnabled        Boolean                @default(false)
  enabledCategories NotificationCategory[] @default([TICKETS, PAYMENTS, CASHLESS, PROGRAM, SECURITY, SYSTEM])
  quietHoursStart   String?                // e.g., "22:00"
  quietHoursEnd     String?                // e.g., "08:00"
  timezone          String                 @default("Europe/Paris")
  createdAt         DateTime               @default(now())
  updatedAt         DateTime               @updatedAt

  // Relations
  user              User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ScheduledNotification {
  id              String                      @id @default(uuid())
  festivalId      String?
  title           String
  body            String
  type            NotificationType            @default(SYSTEM)
  data            Json?
  imageUrl        String?
  actionUrl       String?
  scheduledFor    DateTime
  status          ScheduledNotificationStatus @default(PENDING)
  sentAt          DateTime?
  sentCount       Int                         @default(0)
  failedCount     Int                         @default(0)
  // Targeting
  targetAll       Boolean                     @default(false)
  targetUserIds   String[]                    // Specific user IDs
  targetRoles     UserRole[]                  // Target by role
  targetTicketTypes TicketType[]              // Target ticket holders
  createdById     String
  createdAt       DateTime                    @default(now())
  updatedAt       DateTime                    @updatedAt

  @@index([festivalId])
  @@index([status])
  @@index([scheduledFor])
  @@index([createdById])
}

model NotificationTemplate {
  id          String           @id @default(uuid())
  name        String           @unique
  type        NotificationType
  titleTemplate   String       // Handlebars template
  bodyTemplate    String       // Handlebars template
  defaultImageUrl String?
  defaultActionUrl String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([type])
  @@index([isActive])
}

model Vendor {
  id              String      @id @default(uuid())
  festivalId      String
  ownerId         String
  name            String
  type            VendorType
  description     String?
  logoUrl         String?
  location        String?
  latitude        Float?
  longitude       Float?
  commissionRate  Decimal     @db.Decimal(5, 2) @default(10.00) // Platform commission %
  isOpen          Boolean     @default(true)
  isActive        Boolean     @default(true)
  openingHours    Json?       // {"monday": {"open": "09:00", "close": "22:00"}, ...}
  qrMenuCode      String?     @unique // Unique QR code for digital menu
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  festival        Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  products        VendorProduct[]
  orders          VendorOrder[]
  payouts         VendorPayout[]
  menuItems       MenuItem[]  // Legacy support

  @@unique([festivalId, name])
  @@index([festivalId])
  @@index([ownerId])
  @@index([type])
  @@index([isOpen])
  @@index([isActive])
}

model VendorProduct {
  id          String   @id @default(uuid())
  vendorId    String
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  category    String?
  imageUrl    String?
  stock       Int?     // null = unlimited stock
  soldCount   Int      @default(0)
  isAvailable Boolean  @default(true)
  sortOrder   Int      @default(0)
  allergens   String[] // ["gluten", "nuts", "dairy", etc.]
  options     Json?    // {"size": ["S", "M", "L"], "extras": ["cheese", "bacon"]}
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  vendor      Vendor   @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  orderItems  VendorOrderItem[]

  @@unique([vendorId, name])
  @@index([vendorId])
  @@index([category])
  @@index([isAvailable])
  @@index([sortOrder])
}

// Legacy MenuItem for backward compatibility
model MenuItem {
  id          String   @id @default(uuid())
  vendorId    String
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  category    String?
  imageUrl    String?
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  vendor      Vendor   @relation(fields: [vendorId], references: [id], onDelete: Cascade)

  @@index([vendorId])
  @@index([category])
  @@index([isAvailable])
}

model VendorOrder {
  id              String              @id @default(uuid())
  orderNumber     String              @unique // Human-readable order number
  vendorId        String
  userId          String
  subtotal        Decimal             @db.Decimal(10, 2)
  commission      Decimal             @db.Decimal(10, 2) @default(0) // Platform commission
  totalAmount     Decimal             @db.Decimal(10, 2)
  status          OrderStatus         @default(PENDING)
  paymentMethod   VendorPaymentMethod @default(CASHLESS)
  cashlessTransactionId String?       @unique
  notes           String?
  estimatedReadyAt DateTime?
  readyAt         DateTime?
  deliveredAt     DateTime?
  cancelledAt     DateTime?
  cancelReason    String?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  // Relations
  vendor          Vendor              @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  user            User                @relation(fields: [userId], references: [id])
  items           VendorOrderItem[]

  // Performance indexes - optimized for vendor dashboard and analytics
  @@index([vendorId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([orderNumber])
  @@index([paymentMethod])
  @@index([vendorId, status])             // Vendor order management
  @@index([vendorId, createdAt])          // Vendor sales history
  @@index([vendorId, status, createdAt])  // Vendor analytics
  @@index([userId, createdAt])            // User order history
  @@index([status, createdAt])            // Global order analytics
}

model VendorOrderItem {
  id          String        @id @default(uuid())
  orderId     String
  productId   String
  productName String        // Snapshot at order time
  quantity    Int
  unitPrice   Decimal       @db.Decimal(10, 2) // Snapshot at order time
  totalPrice  Decimal       @db.Decimal(10, 2)
  options     Json?         // Selected options like {"size": "M", "extras": ["cheese"]}
  notes       String?
  createdAt   DateTime      @default(now())

  // Relations
  order       VendorOrder   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     VendorProduct @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model VendorPayout {
  id              String        @id @default(uuid())
  vendorId        String
  amount          Decimal       @db.Decimal(10, 2)
  commission      Decimal       @db.Decimal(10, 2) @default(0) // Total commission deducted
  netAmount       Decimal       @db.Decimal(10, 2) // Amount after commission
  status          PayoutStatus  @default(PENDING)
  periodStart     DateTime      // Start of the payout period
  periodEnd       DateTime      // End of the payout period
  orderCount      Int           @default(0)
  bankAccount     String?       // IBAN or account reference
  bankName        String?
  reference       String?       @unique // Payment reference
  processedAt     DateTime?
  processedById   String?
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  vendor          Vendor        @relation(fields: [vendorId], references: [id], onDelete: Cascade)

  @@index([vendorId])
  @@index([status])
  @@index([periodStart, periodEnd])
  @@index([createdAt])
}

// Support & FAQ Enums
enum SupportTicketStatus {
  OPEN
  IN_PROGRESS
  WAITING_FOR_USER
  RESOLVED
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum LostItemStatus {
  REPORTED
  FOUND
  RETURNED
  UNCLAIMED
}

// Support & FAQ Models
model FaqCategory {
  id        String    @id @default(uuid())
  name      String
  order     Int       @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  items     FaqItem[]

  @@index([order])
}

model FaqItem {
  id          String      @id @default(uuid())
  categoryId  String
  question    String
  answer      String      @db.Text
  order       Int         @default(0)
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  category    FaqCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@index([categoryId])
  @@index([order])
  @@index([isActive])
}

model SupportTicket {
  id          String              @id @default(uuid())
  userId      String
  festivalId  String?
  subject     String
  description String              @db.Text
  status      SupportTicketStatus @default(OPEN)
  priority    Priority            @default(MEDIUM)
  assignedTo  String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  // Relations
  user        User                @relation(fields: [userId], references: [id])
  messages    SupportMessage[]

  @@index([userId])
  @@index([festivalId])
  @@index([status])
  @@index([priority])
  @@index([createdAt])
}

model SupportMessage {
  id        String        @id @default(uuid())
  ticketId  String
  senderId  String
  message   String        @db.Text
  isStaff   Boolean       @default(false)
  createdAt DateTime      @default(now())

  // Relations
  ticket    SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([ticketId])
  @@index([senderId])
  @@index([createdAt])
}

model LostItem {
