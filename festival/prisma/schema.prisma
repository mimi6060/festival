// Camping / Accommodation Models

// CampingZone: Represents a camping area within a festival
model CampingZone {
  id              String            @id @default(uuid())
  festivalId      String
  name            String
  description     String?
  type            AccommodationType
  capacity        Int               // Total number of spots in this zone
  pricePerNight   Decimal           @db.Decimal(10, 2)
  amenities       String[]          // ["electricity", "water", "wifi", "showers", "toilets"]
  rules           String?           @db.Text // Zone-specific rules
  latitude        Float?            // For map display
  longitude       Float?
  imageUrl        String?
  isActive        Boolean           @default(true)
  sortOrder       Int               @default(0)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  // Relations
  festival        Festival          @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  spots           CampingSpot[]

  @@unique([festivalId, name])
  @@index([festivalId])
  @@index([type])
  @@index([isActive])
  @@index([sortOrder])
}

// CampingSpot: Individual camping spot within a zone
model CampingSpot {
  id              String            @id @default(uuid())
  zoneId          String
  number          String            // Spot identifier (e.g., "A1", "B23")
  status          CampingSpotStatus @default(AVAILABLE)
  latitude        Float?            // Precise location for map
  longitude       Float?
  size            String?           // "small", "medium", "large"
  electricityHook Boolean           @default(false)
  waterHook       Boolean           @default(false)
  maxVehicleLength Float?           // For caravans/campervans (in meters)
  notes           String?           // Staff notes about this spot
  isActive        Boolean           @default(true)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  // Relations
  zone            CampingZone       @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  bookings        CampingBooking[]

  @@unique([zoneId, number])
  @@index([zoneId])
  @@index([status])
  @@index([isActive])
}

// CampingBooking: Reservation of a camping spot
model CampingBooking {
  id              String        @id @default(uuid())
  bookingNumber   String        @unique // Human-readable booking reference
  spotId          String
  userId          String
  checkIn         DateTime
  checkOut        DateTime
  guestCount      Int
  status          BookingStatus @default(PENDING)
  totalPrice      Decimal       @db.Decimal(10, 2)
  paidAmount      Decimal       @db.Decimal(10, 2) @default(0)
  vehiclePlate    String?       // License plate for vehicle
  vehicleType     String?       // "car", "caravan", "campervan", "motorcycle"
  qrCode          String?       @unique // QR code for access
  qrCodeData      String?       // Signed QR payload
  notes           String?       // Guest notes
  staffNotes      String?       // Staff-only notes
  paymentId       String?       // Reference to payment
  checkedInAt     DateTime?
  checkedInBy     String?       // Staff ID who checked in
  checkedOutAt    DateTime?
  checkedOutBy    String?       // Staff ID who checked out
  cancelledAt     DateTime?
  cancelReason    String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  spot            CampingSpot   @relation(fields: [spotId], references: [id], onDelete: Cascade)
  user            User          @relation(fields: [userId], references: [id])

  @@index([spotId])
  @@index([userId])
  @@index([status])
  @@index([checkIn, checkOut])
  @@index([bookingNumber])
  @@index([qrCode])
  @@index([vehiclePlate])
}

