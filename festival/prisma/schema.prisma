model StaffMember {
  id               String          @id @default(uuid())
  userId           String
  festivalId       String
  roleId           String
  department       StaffDepartment @default(GENERAL)
  employeeCode     String?         // Internal staff code
  phone            String?
  emergencyContact Json?           // {name, phone, relation}
  badgeNumber      String?         @unique
  notes            String?
  isActive         Boolean         @default(true)
  hiredAt          DateTime        @default(now())
  terminatedAt     DateTime?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  // Relations
  user             User            @relation(fields: [userId], references: [id])
  festival         Festival        @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  role             StaffRole       @relation(fields: [roleId], references: [id])
  shifts           StaffShift[]
  checkIns         StaffCheckIn[]

  @@unique([userId, festivalId])
  @@index([userId])
  @@index([festivalId])
  @@index([roleId])
  @@index([department])
  @@index([badgeNumber])
  @@index([isActive])
}

model StaffShift {
  id            String      @id @default(uuid())
  staffMemberId String
  zoneId        String?     // Optional zone assignment
  title         String?     // Shift description/title
  startTime     DateTime
  endTime       DateTime
  breakDuration Int         @default(0) // Break time in minutes
  status        ShiftStatus @default(SCHEDULED)
  notes         String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  staffMember   StaffMember @relation(fields: [staffMemberId], references: [id], onDelete: Cascade)
  zone          Zone?       @relation(fields: [zoneId], references: [id])
  checkIns      StaffCheckIn[]

  @@index([staffMemberId])
  @@index([zoneId])
  @@index([startTime])
  @@index([endTime])
  @@index([status])
  @@index([staffMemberId, startTime])
}

model StaffCheckIn {
  id            String      @id @default(uuid())
  staffMemberId String
  shiftId       String?
  checkInTime   DateTime    @default(now())
  checkOutTime  DateTime?
  location      String?     // GPS coordinates or zone name
  checkInMethod String?     // QR, NFC, MANUAL
  notes         String?
  createdAt     DateTime    @default(now())

  // Relations
  staffMember   StaffMember @relation(fields: [staffMemberId], references: [id], onDelete: Cascade)
  shift         StaffShift? @relation(fields: [shiftId], references: [id])

  @@index([staffMemberId])
  @@index([shiftId])
  @@index([checkInTime])
  @@index([staffMemberId, checkInTime])
}

