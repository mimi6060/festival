// =============================================
// GDPR COMPLIANCE MODELS
// =============================================

enum ConsentType {
  MARKETING
  ANALYTICS
  PERSONALIZATION
  THIRD_PARTY_SHARING
  ESSENTIAL
}

enum GdprRequestType {
  DATA_ACCESS
  DATA_DELETION
  DATA_RECTIFICATION
  DATA_PORTABILITY
  CONSENT_WITHDRAWAL
}

enum GdprRequestStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  REJECTED
}

// User consent tracking for GDPR compliance
model UserConsent {
  id          String      @id @default(uuid())
  userId      String
  type        ConsentType
  granted     Boolean     @default(false)
  grantedAt   DateTime?
  revokedAt   DateTime?
  ipAddress   String?
  userAgent   String?
  version     Int         @default(1) // Consent version
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([userId, type])
  @@index([userId])
  @@index([type])
  @@index([granted])
}

// GDPR data requests (access, deletion, rectification, etc.)
model GdprRequest {
  id              String            @id @default(uuid())
  userId          String
  type            GdprRequestType
  status          GdprRequestStatus @default(PENDING)
  details         String?           @db.Text
  format          String?           // Export format (JSON, CSV, PDF)
  downloadUrl     String?
  expiresAt       DateTime?
  processedAt     DateTime?
  processedBy     String?
  rejectionReason String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([createdAt])
}

// User sessions for security and GDPR audit
model Session {
  id          String    @id @default(uuid())
  userId      String
  token       String    @unique
  ipAddress   String?
  userAgent   String?
  deviceInfo  Json?
  isActive    Boolean   @default(true)
  lastActiveAt DateTime @default(now())
  expiresAt   DateTime
  createdAt   DateTime  @default(now())

  @@index([userId])
  @@index([token])
  @@index([isActive])
  @@index([expiresAt])
}
