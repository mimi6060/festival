  festivalId  String
  reportedBy  String
  description String         @db.Text
  location    String?
  status      LostItemStatus @default(REPORTED)
  foundBy     String?
  contactInfo String?
  imageUrl    String?
  claimedAt   DateTime?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([festivalId])
  @@index([reportedBy])
  @@index([status])
  @@index([createdAt])
