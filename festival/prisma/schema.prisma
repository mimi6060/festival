// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum UserRole {
  ADMIN
  ORGANIZER
  STAFF
  CASHIER
  SECURITY
  USER
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BANNED
  PENDING_VERIFICATION
}

enum FestivalStatus {
  DRAFT
  PUBLISHED
  ONGOING
  COMPLETED
  CANCELLED
}

enum TicketStatus {
  AVAILABLE
  RESERVED
  SOLD
  USED
  CANCELLED
  REFUNDED
}

enum TicketType {
  STANDARD
  VIP
  BACKSTAGE
  CAMPING
  PARKING
  COMBO
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum PaymentProvider {
  STRIPE
  PAYPAL
  BANK_TRANSFER
  CASH
}

enum TransactionType {
  TOPUP
  PAYMENT
  REFUND
  TRANSFER
  CORRECTION
}

// Models
model User {
  id                String      @id @default(uuid())
  email             String      @unique
  passwordHash      String
  firstName         String
  lastName          String
  phone             String?
  role              UserRole    @default(USER)
  status            UserStatus  @default(PENDING_VERIFICATION)
  emailVerified     Boolean     @default(false)
  refreshToken      String?
  lastLoginAt       DateTime?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  // Relations
  tickets           Ticket[]
  payments          Payment[]
  cashlessAccount   CashlessAccount?
  staffAssignments  StaffAssignment[]
  organizedFestivals Festival[]       // Festivals organized by this user

  @@index([email])
  @@index([role])
}

model Festival {
  id              String          @id @default(uuid())
  organizerId     String          // Multi-tenant: festival belongs to an organizer
  name            String
  slug            String          @unique
  description     String?
  location        String
  address         String?
  startDate       DateTime
  endDate         DateTime
  status          FestivalStatus  @default(DRAFT)
  maxCapacity     Int
  currentAttendees Int            @default(0)
  logoUrl         String?
  bannerUrl       String?
  websiteUrl      String?
  contactEmail    String?
  timezone        String          @default("Europe/Paris")
  currency        String          @default("EUR")
  isDeleted       Boolean         @default(false)  // Soft delete
  deletedAt       DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  organizer        User            @relation(fields: [organizerId], references: [id])
  ticketCategories TicketCategory[]
  tickets          Ticket[]
  zones            Zone[]
  staffAssignments StaffAssignment[]
  cashlessTransactions CashlessTransaction[]

  @@index([organizerId])
  @@index([slug])
  @@index([status])
  @@index([startDate, endDate])
  @@index([isDeleted])
}

model TicketCategory {
  id            String      @id @default(uuid())
  festivalId    String
  name          String
  description   String?
  type          TicketType
  price         Decimal     @db.Decimal(10, 2)
  quota         Int
  soldCount     Int         @default(0)
  maxPerUser    Int         @default(4)
  saleStartDate DateTime
  saleEndDate   DateTime
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  festival      Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  tickets       Ticket[]

  @@index([festivalId])
  @@index([type])
}

model Ticket {
  id              String        @id @default(uuid())
  festivalId      String
  categoryId      String
  userId          String
  qrCode          String        @unique
  qrCodeData      String
  status          TicketStatus  @default(SOLD)
  purchasePrice   Decimal       @db.Decimal(10, 2)
  usedAt          DateTime?
  usedByStaffId   String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  festival        Festival      @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  category        TicketCategory @relation(fields: [categoryId], references: [id])
  user            User          @relation(fields: [userId], references: [id])
  payment         Payment?      @relation(fields: [paymentId], references: [id])
  paymentId       String?

  @@index([festivalId])
  @@index([userId])
  @@index([qrCode])
  @@index([status])
}

model Payment {
  id              String          @id @default(uuid())
  userId          String
  amount          Decimal         @db.Decimal(10, 2)
  currency        String          @default("EUR")
  status          PaymentStatus   @default(PENDING)
  provider        PaymentProvider
  providerPaymentId String?
  providerData    Json?
  description     String?
  metadata        Json?
  paidAt          DateTime?
  refundedAt      DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  user            User            @relation(fields: [userId], references: [id])
  tickets         Ticket[]
  cashlessTopup   CashlessTransaction?

  @@index([userId])
  @@index([status])
  @@index([providerPaymentId])
}

model CashlessAccount {
  id            String      @id @default(uuid())
  userId        String      @unique
  balance       Decimal     @db.Decimal(10, 2) @default(0)
  nfcTagId      String?     @unique
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user          User        @relation(fields: [userId], references: [id])
  transactions  CashlessTransaction[]

  @@index([nfcTagId])
}

model CashlessTransaction {
  id              String          @id @default(uuid())
  accountId       String
  festivalId      String
  type            TransactionType
  amount          Decimal         @db.Decimal(10, 2)
  balanceBefore   Decimal         @db.Decimal(10, 2)
  balanceAfter    Decimal         @db.Decimal(10, 2)
  description     String?
  metadata        Json?
  paymentId       String?         @unique
  performedById   String?
  createdAt       DateTime        @default(now())

  // Relations
  account         CashlessAccount @relation(fields: [accountId], references: [id])
  festival        Festival        @relation(fields: [festivalId], references: [id])
  payment         Payment?        @relation(fields: [paymentId], references: [id])

  @@index([accountId])
  @@index([festivalId])
  @@index([type])
  @@index([createdAt])
}

model Zone {
  id            String      @id @default(uuid())
  festivalId    String
  name          String
  description   String?
  capacity      Int?
  requiresTicketType TicketType[]
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  festival      Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  staffAssignments StaffAssignment[]

  @@index([festivalId])
}

model StaffAssignment {
  id            String      @id @default(uuid())
  userId        String
  festivalId    String
  zoneId        String?
  role          UserRole
  startTime     DateTime
  endTime       DateTime
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user          User        @relation(fields: [userId], references: [id])
  festival      Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  zone          Zone?       @relation(fields: [zoneId], references: [id])

  @@index([userId])
  @@index([festivalId])
  @@index([zoneId])
}
