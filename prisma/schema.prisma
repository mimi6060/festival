// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum UserRole {
  ADMIN
  ORGANIZER
  STAFF
  CASHIER
  SECURITY
  USER
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BANNED
  PENDING_VERIFICATION
}

enum FestivalStatus {
  DRAFT
  PUBLISHED
  ONGOING
  COMPLETED
  CANCELLED
}

enum TicketStatus {
  AVAILABLE
  RESERVED
  SOLD
  USED
  CANCELLED
  REFUNDED
}

enum TicketType {
  STANDARD
  VIP
  BACKSTAGE
  CAMPING
  PARKING
  COMBO
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum PaymentProvider {
  STRIPE
  PAYPAL
  BANK_TRANSFER
  CASH
}

enum TransactionType {
  TOPUP
  PAYMENT
  REFUND
  TRANSFER
  CORRECTION
}

enum VendorType {
  FOOD
  DRINK
  MERCHANDISE
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  DELIVERED
  CANCELLED
}

enum NotificationType {
  TICKET_PURCHASED
  PAYMENT_SUCCESS
  PAYMENT_FAILED
  CASHLESS_TOPUP
  ARTIST_REMINDER
  FESTIVAL_UPDATE
  SYSTEM
}

enum AccommodationType {
  TENT_SPOT
  CARAVAN_SPOT
  GLAMPING
  CABIN
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CHECKED_IN
  CHECKED_OUT
  CANCELLED
  NO_SHOW
}

// Models
model User {
  id                String      @id @default(uuid())
  email             String      @unique
  passwordHash      String
  firstName         String
  lastName          String
  phone             String?
  role              UserRole    @default(USER)
  status            UserStatus  @default(PENDING_VERIFICATION)
  emailVerified     Boolean     @default(false)
  refreshToken      String?
  lastLoginAt       DateTime?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  // Relations
  tickets           Ticket[]
  payments          Payment[]
  cashlessAccount   CashlessAccount?
  staffAssignments  StaffAssignment[]
  organizedFestivals Festival[]       // Festivals organized by this user
  vendorOrders      VendorOrder[]
  notifications     Notification[]
  pushToken         PushToken?
  campingBookings   CampingBooking[]

  @@index([email])
  @@index([role])
}

model Festival {
  id              String          @id @default(uuid())
  organizerId     String          // Multi-tenant: festival belongs to an organizer
  name            String
  slug            String          @unique
  description     String?
  location        String
  address         String?
  startDate       DateTime
  endDate         DateTime
  status          FestivalStatus  @default(DRAFT)
  maxCapacity     Int
  currentAttendees Int            @default(0)
  logoUrl         String?
  bannerUrl       String?
  websiteUrl      String?
  contactEmail    String?
  timezone        String          @default("Europe/Paris")
  currency        String          @default("EUR")
  isDeleted       Boolean         @default(false)  // Soft delete
  deletedAt       DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  organizer        User            @relation(fields: [organizerId], references: [id])
  ticketCategories TicketCategory[]
  tickets          Ticket[]
  zones            Zone[]
  staffAssignments StaffAssignment[]
  cashlessTransactions CashlessTransaction[]
  vendors          Vendor[]
  stages           Stage[]
  campingSpots     CampingSpot[]
  mapPois          MapPoi[]

  @@index([organizerId])
  @@index([slug])
  @@index([status])
  @@index([startDate, endDate])
  @@index([isDeleted])
}

model TicketCategory {
  id            String      @id @default(uuid())
  festivalId    String
  name          String
  description   String?
  type          TicketType
  price         Decimal     @db.Decimal(10, 2)
  quota         Int
  soldCount     Int         @default(0)
  maxPerUser    Int         @default(4)
  saleStartDate DateTime
  saleEndDate   DateTime
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  festival      Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  tickets       Ticket[]

  @@index([festivalId])
  @@index([type])
}

model Ticket {
  id              String        @id @default(uuid())
  festivalId      String
  categoryId      String
  userId          String
  qrCode          String        @unique
  qrCodeData      String
  status          TicketStatus  @default(SOLD)
  purchasePrice   Decimal       @db.Decimal(10, 2)
  usedAt          DateTime?
  usedByStaffId   String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  festival        Festival      @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  category        TicketCategory @relation(fields: [categoryId], references: [id])
  user            User          @relation(fields: [userId], references: [id])
  payment         Payment?      @relation(fields: [paymentId], references: [id])
  paymentId       String?
  zoneAccessLogs  ZoneAccessLog[]

  @@index([festivalId])
  @@index([userId])
  @@index([qrCode])
  @@index([status])
}

model Payment {
  id              String          @id @default(uuid())
  userId          String
  amount          Decimal         @db.Decimal(10, 2)
  currency        String          @default("EUR")
  status          PaymentStatus   @default(PENDING)
  provider        PaymentProvider
  providerPaymentId String?
  providerData    Json?
  description     String?
  metadata        Json?
  paidAt          DateTime?
  refundedAt      DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  user            User            @relation(fields: [userId], references: [id])
  tickets         Ticket[]
  cashlessTopup   CashlessTransaction?

  @@index([userId])
  @@index([status])
  @@index([providerPaymentId])
}

model CashlessAccount {
  id            String      @id @default(uuid())
  userId        String      @unique
  balance       Decimal     @db.Decimal(10, 2) @default(0)
  nfcTagId      String?     @unique
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user          User        @relation(fields: [userId], references: [id])
  transactions  CashlessTransaction[]

  @@index([nfcTagId])
}

model CashlessTransaction {
  id              String          @id @default(uuid())
  accountId       String
  festivalId      String
  type            TransactionType
  amount          Decimal         @db.Decimal(10, 2)
  balanceBefore   Decimal         @db.Decimal(10, 2)
  balanceAfter    Decimal         @db.Decimal(10, 2)
  description     String?
  metadata        Json?
  paymentId       String?         @unique
  performedById   String?
  createdAt       DateTime        @default(now())

  // Relations
  account         CashlessAccount @relation(fields: [accountId], references: [id])
  festival        Festival        @relation(fields: [festivalId], references: [id])
  payment         Payment?        @relation(fields: [paymentId], references: [id])

  @@index([accountId])
  @@index([festivalId])
  @@index([type])
  @@index([createdAt])
}

model Zone {
  id            String      @id @default(uuid())
  festivalId    String
  name          String
  description   String?
  capacity      Int?
  requiresTicketType TicketType[]
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  festival      Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  staffAssignments StaffAssignment[]

  @@index([festivalId])
}

model StaffAssignment {
  id            String      @id @default(uuid())
  userId        String
  festivalId    String
  zoneId        String?
  role          UserRole
  startTime     DateTime
  endTime       DateTime
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user          User        @relation(fields: [userId], references: [id])
  festival      Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  zone          Zone?       @relation(fields: [zoneId], references: [id])

  @@index([userId])
  @@index([festivalId])
  @@index([zoneId])
}

model Artist {
  id            String        @id @default(uuid())
  name          String
  genre         String?
  bio           String?
  imageUrl      String?
  spotifyUrl    String?
  instagramUrl  String?
  websiteUrl    String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  performances  Performance[]

  @@index([name])
  @@index([genre])
}

model Stage {
  id            String        @id @default(uuid())
  festivalId    String
  name          String
  description   String?
  capacity      Int?
  location      String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  festival      Festival      @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  performances  Performance[]

  @@unique([festivalId, name])
  @@index([festivalId])
}

model Performance {
  id            String        @id @default(uuid())
  artistId      String
  stageId       String
  startTime     DateTime
  endTime       DateTime
  description   String?
  isCancelled   Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  artist        Artist        @relation(fields: [artistId], references: [id], onDelete: Cascade)
  stage         Stage         @relation(fields: [stageId], references: [id], onDelete: Cascade)

  @@index([artistId])
  @@index([stageId])
  @@index([startTime])
  @@index([stageId, startTime])
}

model AuditLog {
  id          String   @id @default(uuid())
  userId      String?
  action      String
  entityType  String
  entityId    String?
  oldValue    Json?
  newValue    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([entityType])
  @@index([entityId])
  @@index([createdAt])
}

// Map POI Types
enum PoiType {
  STAGE
  FOOD
  DRINK
  TOILET
  MEDICAL
  INFO
  ATM
  PARKING
  CAMPING
  ENTRANCE
  EXIT
  CHARGING
  LOCKER
}

model MapPoi {
  id          String    @id @default(uuid())
  festivalId  String
  name        String
  type        PoiType
  description String?
  latitude    Float
  longitude   Float
  iconUrl     String?
  metadata    Json?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  festival    Festival  @relation(fields: [festivalId], references: [id], onDelete: Cascade)

  @@index([festivalId])
  @@index([type])
  @@index([latitude, longitude])
}

model Notification {
  id          String           @id @default(uuid())
  userId      String
  title       String
  body        String
  type        NotificationType
  data        Json?
  isRead      Boolean          @default(false)
  createdAt   DateTime         @default(now())

  // Relations
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, isRead])
  @@index([createdAt])
}

model PushToken {
  id          String   @id @default(uuid())
  userId      String   @unique
  token       String
  platform    String   // ios, android, web
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
}

model Vendor {
  id          String      @id @default(uuid())
  festivalId  String
  name        String
  type        VendorType
  description String?
  logoUrl     String?
  location    String?
  isOpen      Boolean     @default(true)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  festival    Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  menuItems   MenuItem[]
  orders      VendorOrder[]

  @@index([festivalId])
  @@index([type])
  @@index([isOpen])
}

model MenuItem {
  id          String   @id @default(uuid())
  vendorId    String
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  category    String?
  imageUrl    String?
  isAvailable Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  vendor      Vendor   @relation(fields: [vendorId], references: [id], onDelete: Cascade)

  @@index([vendorId])
  @@index([category])
  @@index([isAvailable])
}

model VendorOrder {
  id          String      @id @default(uuid())
  vendorId    String
  userId      String
  items       Json
  totalAmount Decimal     @db.Decimal(10, 2)
  status      OrderStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  vendor      Vendor      @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id])

  @@index([vendorId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}
