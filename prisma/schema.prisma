// API KEYS FOR RATE LIMITING
// =============================================

enum ApiKeyStatus {
  ACTIVE
  INACTIVE
  REVOKED
  EXPIRED
}

enum ApiKeyTier {
  FREE
  STARTER
  PRO
  ENTERPRISE
}

enum ApiKeyScope {
  READ
  WRITE
  DELETE
  ADMIN
}

// ApiKey: API keys for programmatic access with tier-based rate limiting
model ApiKey {
  id              String        @id @default(uuid())
  userId          String
  name            String                    // Friendly name for the API key
  keyPrefix       String                    // First 12 chars for identification
  keyHash         String        @unique     // SHA-256 hash of the key
  tier            ApiKeyTier    @default(FREE)
  status          ApiKeyStatus  @default(ACTIVE)
  scopes          ApiKeyScope[] @default([READ])
  permissions     Json?                     // Resource-specific permissions
  description     String?
  ipWhitelist     String[]      @default([]) // Allowed IP addresses
  lastUsedAt      DateTime?
  lastUsedIp      String?
  usageCount      Int           @default(0)
  expiresAt       DateTime?                 // Expiration date (null = never)
  festivalId      String?                   // Scoped to specific festival (null = all)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Performance indexes
  @@unique([userId, name])                  // One key per name per user
  @@index([userId])
  @@index([keyHash])
  @@index([keyPrefix])
  @@index([status])
  @@index([tier])
  @@index([festivalId])
  @@index([userId, status])                 // User's active keys
  @@index([status, expiresAt])              // Expired keys cleanup
  @@index([lastUsedAt])                     // Key usage tracking
}

// =============================================
// FESTIVAL LANGUAGE SETTINGS
// =============================================

enum SupportedLanguage {
  FR
  EN
  DE
  ES
  IT
  NL
}

// FestivalLanguageSettings: Language configuration per festival
model FestivalLanguageSettings {
  id                  String              @id @default(uuid())
  festivalId          String              @unique
  defaultLanguage     SupportedLanguage   @default(FR)
  supportedLanguages  SupportedLanguage[] @default([FR, EN])
  autoDetect          Boolean             @default(true)  // Auto-detect from Accept-Language header
  fallbackToDefault   Boolean             @default(true)  // Fall back to default language if requested not available
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt

  // Relations
  festival            Festival            @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  localizedContent    FestivalLocalizedContent[]

  @@index([festivalId])
}

// FestivalLocalizedContent: Localized content for festivals
model FestivalLocalizedContent {
  id                  String              @id @default(uuid())
  languageSettingsId  String
  language            SupportedLanguage
  name                String?             // Localized festival name
  description         String?             @db.Text  // Localized description
  shortDescription    String?             // Localized short description
  rules               String?             @db.Text  // Localized rules/terms
  welcomeMessage      String?             @db.Text  // Localized welcome message
  metadata            Json?               // Additional localized metadata (e.g., FAQ, custom fields)
  isPublished         Boolean             @default(false)
  publishedAt         DateTime?
  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt

  // Relations
  languageSettings    FestivalLanguageSettings @relation(fields: [languageSettingsId], references: [id], onDelete: Cascade)

  @@unique([languageSettingsId, language])
  @@index([languageSettingsId])
  @@index([language])
  @@index([isPublished])
}
