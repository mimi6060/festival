// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum UserRole {
  ADMIN
  ORGANIZER
  STAFF
  CASHIER
  SECURITY
  USER
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BANNED
  PENDING_VERIFICATION
}

enum FestivalStatus {
  DRAFT
  PUBLISHED
  ONGOING
  COMPLETED
  CANCELLED
}

enum TicketStatus {
  AVAILABLE
  RESERVED
  SOLD
  USED
  CANCELLED
  REFUNDED
}

enum TicketType {
  STANDARD
  VIP
  BACKSTAGE
  CAMPING
  PARKING
  COMBO
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
  CANCELLED
}

enum PaymentProvider {
  STRIPE
  PAYPAL
  BANK_TRANSFER
  CASH
}

enum TransactionType {
  TOPUP
  PAYMENT
  REFUND
  TRANSFER
  CORRECTION
}

enum VendorType {
  FOOD
  DRINK
  BAR
  MERCHANDISE
}

enum PayoutStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

enum VendorPaymentMethod {
  CASHLESS
  CARD
  CASH
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  READY
  DELIVERED
  CANCELLED
}

enum NotificationType {
  TICKET_PURCHASED
  PAYMENT_SUCCESS
  PAYMENT_FAILED
  CASHLESS_TOPUP
  ARTIST_REMINDER
  FESTIVAL_UPDATE
  SCHEDULE_CHANGE
  SECURITY_ALERT
  PROMO
  VENDOR_ORDER
  SYSTEM
}

enum NotificationPlatform {
  IOS
  ANDROID
  WEB
}

enum NotificationCategory {
  TICKETS
  PAYMENTS
  CASHLESS
  PROGRAM
  SECURITY
  PROMOTIONS
  VENDOR
  SYSTEM
}

enum ScheduledNotificationStatus {
  PENDING
  SENT
  CANCELLED
  FAILED
}

enum AccommodationType {
  TENT
  CARAVAN
  GLAMPING
  CABIN
  CAMPERVAN
}

enum AuthProvider {
  LOCAL
  GOOGLE
  GITHUB
  FACEBOOK
  APPLE
}

enum Currency {
  EUR // Euro - base currency
  USD // US Dollar
  GBP // British Pound
  CHF // Swiss Franc
}

enum CampingSpotStatus {
  AVAILABLE
  OCCUPIED
  RESERVED
  MAINTENANCE
  BLOCKED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CHECKED_IN
  CHECKED_OUT
  CANCELLED
  NO_SHOW
}

// Models
model User {
  id                String        @id @default(uuid())
  email             String        @unique
  passwordHash      String?       // Optional for OAuth users
  firstName         String
  lastName          String
  phone             String?
  avatarUrl         String?       // Profile picture URL
  role              UserRole      @default(USER)
  status            UserStatus    @default(PENDING_VERIFICATION)
  emailVerified     Boolean       @default(false)
  authProvider      AuthProvider  @default(LOCAL)  // Authentication provider
  oauthProviderId   String?       // ID from OAuth provider
  refreshToken      String?
  resetToken        String?       // Hashed password reset token
  resetTokenExpiry  DateTime?     // Token expiration timestamp
  lastLoginAt       DateTime?
  // Currency preferences
  displayCurrency   String?       // User's preferred display currency (ISO code)
  isDeleted         Boolean       @default(false)  // Soft delete flag for GDPR compliance
  deletedAt         DateTime?     // Timestamp when user was soft deleted
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  // Relations
  tickets           Ticket[]
  ticketsTransferred Ticket[]     @relation("TicketTransfers")
  payments          Payment[]
  cashlessAccount   CashlessAccount?
  staffAssignments  StaffAssignment[]
  organizedFestivals Festival[]       // Festivals organized by this user
  vendorOrders      VendorOrder[]
  notifications     Notification[]
  pushTokens        PushToken[]
  notificationPreference NotificationPreference?
  campingBookings   CampingBooking[]
  supportTickets    SupportTicket[]
  staffMembers      StaffMember[]
  userConsents      UserConsent[]          // GDPR consent records
  gdprRequests      GdprRequest[]          // GDPR data requests
  sessions          Session[]              // Active sessions
  apiKeys           ApiKey[]               // API keys for programmatic access

  // Performance indexes
  @@index([email])
  @@index([role])
  @@index([status])
  @@index([role, status])
  @@index([createdAt])
  @@index([lastLoginAt])
  @@index([isDeleted])               // Soft delete filter for GDPR compliance
}

model Festival {
  id              String          @id @default(uuid())
  organizerId     String          // Multi-tenant: festival belongs to an organizer
  name            String
  slug            String          @unique
  description     String?
  location        String
  address         String?
  startDate       DateTime
  endDate         DateTime
  status          FestivalStatus  @default(DRAFT)
  maxCapacity     Int
  currentAttendees Int            @default(0)
  logoUrl         String?
  bannerUrl       String?
  websiteUrl      String?
  contactEmail    String?
  timezone        String          @default("Europe/Paris")
  currency        String          @default("EUR")
  isDeleted       Boolean         @default(false)  // Soft delete
  deletedAt       DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  organizer        User            @relation(fields: [organizerId], references: [id])
  ticketCategories TicketCategory[]
  tickets          Ticket[]
  zones            Zone[]
  staffAssignments StaffAssignment[]
  cashlessTransactions CashlessTransaction[]
  vendors          Vendor[]
  stages           Stage[]
  campingZones     CampingZone[]
  mapPois          MapPoi[]
  staffMembers     StaffMember[]
  promoCodes       PromoCode[]
  languageSettings FestivalLanguageSettings?

  @@index([organizerId])
  @@index([slug])
  @@index([status])
  @@index([startDate, endDate])
  @@index([isDeleted])
}

// PromoCode model for discount codes
model PromoCode {
  id            String       @id @default(uuid())
  code          String       @unique
  discountType  DiscountType
  discountValue Decimal      @db.Decimal(10, 2)
  maxUses       Int?
  currentUses   Int          @default(0)
  minAmount     Decimal?     @db.Decimal(10, 2)
  expiresAt     DateTime?
  isActive      Boolean      @default(true)
  stackable     Boolean      @default(false) // Whether this code can be combined with other codes
  festivalId    String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  // Relations
  festival      Festival?    @relation(fields: [festivalId], references: [id], onDelete: SetNull)

  @@index([code])
  @@index([festivalId])
  @@index([isActive])
  @@index([expiresAt])
}

model TicketCategory {
  id            String      @id @default(uuid())
  festivalId    String
  name          String
  description   String?
  type          TicketType
  price         Decimal     @db.Decimal(10, 2)
  quota         Int
  soldCount     Int         @default(0)
  maxPerUser    Int         @default(4)
  saleStartDate DateTime
  saleEndDate   DateTime
  isActive      Boolean     @default(true)
  // Soft delete
  isDeleted     Boolean     @default(false)
  deletedAt     DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  festival      Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  tickets       Ticket[]

  // Performance indexes
  @@index([festivalId])
  @@index([type])
  @@index([isActive])                          // Filter active categories
  @@index([festivalId, isActive])              // Festival's active categories
  @@index([festivalId, type, isActive])        // Festival categories by type
  @@index([saleStartDate, saleEndDate])        // Date range queries for on-sale categories
  @@index([isDeleted])                         // Soft delete filter
}

model Ticket {
  id              String        @id @default(uuid())
  festivalId      String
  categoryId      String
  userId          String?       // Optional for guest purchases
  qrCode          String        @unique
  qrCodeData      String
  status          TicketStatus  @default(SOLD)
  purchasePrice   Decimal       @db.Decimal(10, 2)
  usedAt          DateTime?
  usedByStaffId   String?
  // Guest purchase fields
  isGuest         Boolean       @default(false)
  guestEmail      String?
  guestFirstName  String?
  guestLastName   String?
  guestPhone      String?
  // Transfer fields
  transferredFromUserId String?
  transferredAt   DateTime?
  // Soft delete
  isDeleted       Boolean       @default(false)
  deletedAt       DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  transferredFromUser User?     @relation("TicketTransfers", fields: [transferredFromUserId], references: [id])
  festival        Festival      @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  category        TicketCategory @relation(fields: [categoryId], references: [id])
  user            User?         @relation(fields: [userId], references: [id])
  payment         Payment?      @relation(fields: [paymentId], references: [id])
  paymentId       String?
  zoneAccessLogs  ZoneAccessLog[]

  // Performance indexes - optimized for common queries
  @@index([festivalId])
  @@index([userId])
  @@index([qrCode])
  @@index([status])
  @@index([festivalId, status])           // Analytics: tickets by festival and status
  @@index([festivalId, categoryId])       // Reports: tickets by festival and category
  @@index([festivalId, createdAt])        // Time-based queries
  @@index([userId, status])               // User's tickets by status
  @@index([categoryId, status])           // Category sales
  @@index([createdAt])                    // Time-based analytics
  @@index([paymentId])                    // Payment lookup
  @@index([guestEmail])                   // Guest ticket lookup by email
  @@index([isGuest])                      // Guest analytics
  @@index([transferredFromUserId])        // Transfer history lookup
  @@index([isDeleted])                    // Soft delete filter
}

model Payment {
  id              String          @id @default(uuid())
  userId          String?         // Optional for guest purchases
  amount          Decimal         @db.Decimal(10, 2)
  currency        String          @default("EUR")
  // Multi-currency support: original payment details
  originalAmount      Decimal?    @db.Decimal(10, 2)  // Amount in user's currency
  originalCurrency    String?                          // User's currency (ISO code)
  exchangeRate        Decimal?    @db.Decimal(18, 8)  // Rate used for conversion
  exchangeRateId      String?                          // Reference to ExchangeRate record
  convertedAt         DateTime?                        // When conversion was applied
  status          PaymentStatus   @default(PENDING)
  provider        PaymentProvider
  providerPaymentId String?
  providerData    Json?
  description     String?
  metadata        Json?
  paidAt          DateTime?
  refundedAt      DateTime?
  // Soft delete
  isDeleted       Boolean         @default(false)
  deletedAt       DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Relations
  user            User?           @relation(fields: [userId], references: [id])
  tickets         Ticket[]
  cashlessTopup   CashlessTransaction?

  // Performance indexes
  @@index([userId])
  @@index([status])
  @@index([providerPaymentId])
  @@index([userId, status])               // User payments by status
  @@index([createdAt])                    // Time-based queries
  @@index([status, createdAt])            // Payment analytics
  @@index([provider, status])             // Provider analysis
  @@index([paidAt])                       // Completed payments timeline
  @@index([isDeleted])                    // Soft delete filter
  @@index([originalCurrency])             // Currency analytics
}

model CashlessAccount {
  id            String      @id @default(uuid())
  userId        String      @unique
  balance       Decimal     @db.Decimal(10, 2) @default(0)
  nfcTagId      String?     @unique
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user          User        @relation(fields: [userId], references: [id])
  transactions  CashlessTransaction[]

  // Performance indexes
  @@index([nfcTagId])
  @@index([isActive])                          // Filter active accounts
  @@index([balance])                           // Balance analytics/reports
}

model CashlessTransaction {
  id              String          @id @default(uuid())
  accountId       String
  festivalId      String
  type            TransactionType
  amount          Decimal         @db.Decimal(10, 2)
  balanceBefore   Decimal         @db.Decimal(10, 2)
  balanceAfter    Decimal         @db.Decimal(10, 2)
  description     String?
  metadata        Json?
  paymentId       String?         @unique
  performedById   String?
  createdAt       DateTime        @default(now())

  // Relations
  account         CashlessAccount @relation(fields: [accountId], references: [id])
  festival        Festival        @relation(fields: [festivalId], references: [id])
  payment         Payment?        @relation(fields: [paymentId], references: [id])

  // Performance indexes - critical for high-volume transactions
  @@index([accountId])
  @@index([festivalId])
  @@index([type])
  @@index([createdAt])
  @@index([festivalId, type])             // Festival cashless analytics
  @@index([festivalId, createdAt])        // Time-based festival reports
  @@index([festivalId, type, createdAt])  // Full analytics queries
  @@index([accountId, createdAt])         // User transaction history
  @@index([performedById])                // Staff activity tracking
}

model Zone {
  id            String      @id @default(uuid())
  festivalId    String
  name          String
  description   String?
  capacity      Int?
  currentOccupancy Int      @default(0)
  requiresTicketType TicketType[]
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  festival      Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  staffAssignments StaffAssignment[]
  accessLogs    ZoneAccessLog[]
  staffShifts   StaffShift[]

  // Performance indexes
  @@index([festivalId])
  @@index([isActive])                          // Filter active zones
  @@index([festivalId, isActive])              // Festival's active zones
}

enum ZoneAccessAction {
  ENTRY
  EXIT
}

model ZoneAccessLog {
  id          String           @id @default(uuid())
  zoneId      String
  ticketId    String
  action      ZoneAccessAction
  performedById String?
  timestamp   DateTime         @default(now())

  // Relations
  zone        Zone             @relation(fields: [zoneId], references: [id], onDelete: Cascade)
  ticket      Ticket           @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  // Performance indexes
  @@index([zoneId])
  @@index([ticketId])
  @@index([timestamp])
  @@index([zoneId, timestamp])
  @@index([action])                            // Filter by entry/exit
  @@index([zoneId, action, timestamp])         // Zone entry/exit analytics
  @@index([performedById])                     // Staff activity tracking
}

model StaffAssignment {
  id            String      @id @default(uuid())
  userId        String
  festivalId    String
  zoneId        String?
  role          UserRole
  startTime     DateTime
  endTime       DateTime
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  // Relations
  user          User        @relation(fields: [userId], references: [id])
  festival      Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  zone          Zone?       @relation(fields: [zoneId], references: [id])

  // Performance indexes
  @@index([userId])
  @@index([festivalId])
  @@index([zoneId])
  @@index([isActive])                          // Filter active assignments
  @@index([festivalId, isActive])              // Festival's active staff
  @@index([festivalId, zoneId, isActive])      // Zone staff assignments
  @@index([startTime, endTime])                // Time-based queries
  @@index([role])                              // Filter by role
}

model Artist {
  id            String        @id @default(uuid())
  name          String
  genre         String?
  bio           String?
  imageUrl      String?
  spotifyUrl    String?
  instagramUrl  String?
  websiteUrl    String?
  // Soft delete
  isDeleted     Boolean       @default(false)
  deletedAt     DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  performances    Performance[]
  favoriteArtists FavoriteArtist[]

  @@index([name])
  @@index([genre])
  @@index([isDeleted])
}

model Stage {
  id            String        @id @default(uuid())
  festivalId    String
  name          String
  description   String?
  capacity      Int?
  location      String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  festival      Festival      @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  performances  Performance[]

  @@unique([festivalId, name])
  @@index([festivalId])
}

model Performance {
  id            String        @id @default(uuid())
  artistId      String
  stageId       String
  startTime     DateTime
  endTime       DateTime
  description   String?
  isCancelled   Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  artist        Artist        @relation(fields: [artistId], references: [id], onDelete: Cascade)
  stage         Stage         @relation(fields: [stageId], references: [id], onDelete: Cascade)

  // Performance indexes
  @@index([artistId])
  @@index([stageId])
  @@index([startTime])
  @@index([stageId, startTime])
  @@index([isCancelled])                       // Filter cancelled performances
  @@index([stageId, isCancelled, startTime])   // Active performances by stage
  @@index([startTime, endTime])                // Time range queries
}

model AuditLog {
  id          String   @id @default(uuid())
  userId      String?
  action      String
  entityType  String
  entityId    String?
  oldValue    Json?
  newValue    Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  // Performance indexes
  @@index([userId])
  @@index([action])
  @@index([entityType])
  @@index([entityId])
  @@index([createdAt])
  @@index([entityType, entityId])              // Entity lookup
  @@index([userId, createdAt])                 // User activity history
  @@index([entityType, createdAt])             // Entity type analytics
}

// Map POI Types
enum PoiType {
  STAGE
  FOOD
  DRINK
  TOILET
  MEDICAL
  INFO
  ATM
  PARKING
  CAMPING
  ENTRANCE
  EXIT
  CHARGING
  LOCKER
}

model MapPoi {
  id          String    @id @default(uuid())
  festivalId  String
  name        String
  type        PoiType
  description String?
  latitude    Float
  longitude   Float
  iconUrl     String?
  metadata    Json?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  festival    Festival  @relation(fields: [festivalId], references: [id], onDelete: Cascade)

  @@index([festivalId])
  @@index([type])
  @@index([latitude, longitude])
}

model Notification {
  id          String           @id @default(uuid())
  userId      String
  festivalId  String?          // Optional - for festival-specific notifications
  title       String
  body        String
  type        NotificationType
  data        Json?            // Additional payload data
  imageUrl    String?          // Optional image for rich notifications
  actionUrl   String?          // Deep link or action URL
  isRead      Boolean          @default(false)
  readAt      DateTime?        // When the notification was read
  sentAt      DateTime?        // When push was sent (null if in-app only)
  createdAt   DateTime         @default(now())

  // Relations
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Performance indexes
  @@index([userId])
  @@index([festivalId])
  @@index([userId, isRead])
  @@index([type])
  @@index([createdAt])
  @@index([userId, createdAt])                 // User notification history
  @@index([userId, type, isRead])              // Unread notifications by type
  @@index([festivalId, createdAt])             // Festival notifications timeline
}

model PushToken {
  id          String               @id @default(uuid())
  userId      String
  token       String               @unique
  platform    NotificationPlatform
  deviceName  String?              // e.g., "iPhone 15 Pro", "Chrome on Windows"
  isActive    Boolean              @default(true)
  lastUsedAt  DateTime?
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt

  // Relations
  user        User                 @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Performance indexes
  @@unique([userId, token])
  @@index([userId])
  @@index([token])
  @@index([platform])
  @@index([isActive])
  @@index([userId, isActive])                  // User's active tokens
  @@index([platform, isActive])                // Active tokens by platform
}

model NotificationPreference {
  id                String                 @id @default(uuid())
  userId            String                 @unique
  emailEnabled      Boolean                @default(true)
  pushEnabled       Boolean                @default(true)
  smsEnabled        Boolean                @default(false)
  emailLanguage     String                 @default("fr") // Email language preference: fr, en, de, es, it, ar
  enabledCategories NotificationCategory[] @default([TICKETS, PAYMENTS, CASHLESS, PROGRAM, SECURITY, SYSTEM])
  quietHoursStart   String?                // e.g., "22:00"
  quietHoursEnd     String?                // e.g., "08:00"
  timezone          String                 @default("Europe/Paris")
  createdAt         DateTime               @default(now())
  updatedAt         DateTime               @updatedAt

  // Relations
  user              User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ScheduledNotification {
  id              String                      @id @default(uuid())
  festivalId      String?
  title           String
  body            String
  type            NotificationType            @default(SYSTEM)
  data            Json?
  imageUrl        String?
  actionUrl       String?
  scheduledFor    DateTime
  status          ScheduledNotificationStatus @default(PENDING)
  sentAt          DateTime?
  sentCount       Int                         @default(0)
  failedCount     Int                         @default(0)
  // Targeting
  targetAll       Boolean                     @default(false)
  targetUserIds   String[]                    // Specific user IDs
  targetRoles     UserRole[]                  // Target by role
  targetTicketTypes TicketType[]              // Target ticket holders
  createdById     String
  createdAt       DateTime                    @default(now())
  updatedAt       DateTime                    @updatedAt

  // Performance indexes
  @@index([festivalId])
  @@index([status])
  @@index([scheduledFor])
  @@index([createdById])
  @@index([status, scheduledFor])              // Pending notifications due
  @@index([festivalId, status])                // Festival notifications by status
}

model NotificationTemplate {
  id          String           @id @default(uuid())
  name        String           @unique
  type        NotificationType
  titleTemplate   String       // Handlebars template
  bodyTemplate    String       // Handlebars template
  defaultImageUrl String?
  defaultActionUrl String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@index([type])
  @@index([isActive])
}

model Vendor {
  id              String      @id @default(uuid())
  festivalId      String
  ownerId         String
  name            String
  type            VendorType
  description     String?
  logoUrl         String?
  location        String?
  latitude        Float?
  longitude       Float?
  commissionRate  Decimal     @db.Decimal(5, 2) @default(10.00) // Platform commission %
  isOpen          Boolean     @default(true)
  isActive        Boolean     @default(true)
  openingHours    Json?       // {"monday": {"open": "09:00", "close": "22:00"}, ...}
  qrMenuCode      String?     @unique // Unique QR code for digital menu
  // Soft delete
  isDeleted       Boolean     @default(false)
  deletedAt       DateTime?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  festival        Festival    @relation(fields: [festivalId], references: [id], onDelete: Cascade)
  products        VendorProduct[]
  orders          VendorOrder[]
  payouts         VendorPayout[]
  menuItems       MenuItem[]  // Legacy support

  @@unique([festivalId, name])
  @@index([festivalId])
  @@index([ownerId])
  @@index([type])
  @@index([isOpen])
  @@index([isActive])
  @@index([isDeleted])
}

model VendorProduct {
  id          String   @id @default(uuid())
  vendorId    String
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  category    String?
  imageUrl    String?
  stock       Int?     // null = unlimited stock
  soldCount   Int      @default(0)
  isAvailable Boolean  @default(true)
  sortOrder   Int      @default(0)
  allergens   String[] // ["gluten", "nuts", "dairy", etc.]
  options     Json?    // {"size": ["S", "M", "L"], "extras": ["cheese", "bacon"]}
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  vendor      Vendor   @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  orderItems  VendorOrderItem[]

  @@unique([vendorId, name])
  @@index([vendorId])
  @@index([category])
  @@index([isAvailable])
  @@index([sortOrder])
}

// Legacy MenuItem for backward compatibility
model MenuItem {
  id          String   @id @default(uuid())
  vendorId    String
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  category    String?
  imageUrl    String?
  isAvailable Boolean  @default(true)
